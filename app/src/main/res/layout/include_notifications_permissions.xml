<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/margin_20"
    android:layout_marginTop="@dimen/margin_20"
    android:layout_marginRight="@dimen/margin_20"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_notificary"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:src="@drawable/ic_news"
                app:tint="#0B3575" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:text="È˜tiri"
                android:fontFamily="@font/exo2_semi_bold"
                android:textColor="@color/ColorPolitcs"
                android:textSize="@dimen/text_17" />

        </LinearLayout>

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="@dimen/margin_47"
            android:layout_height="@dimen/margin_26"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@drawable/buttom_toggle_selector"
            android:checked="true"
            android:text=""
            android:textOff=""
            android:textOn="" />

    </RelativeLayout>

</LinearLayout>