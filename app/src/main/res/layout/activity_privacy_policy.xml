<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/BackgroundTintText"
    tools:context="com.frf.app.activitys.TermsAndPrivacyPolicyActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/margin_30"
        android:layout_height="@dimen/margin_30"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_10"
        android:src="@drawable/ic_back_black"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_back"
        android:visibility="gone"
        android:padding="5dp"
        android:layout_marginStart="@dimen/margin_20"
        android:fontFamily="@font/exo2_semi_bold"
        android:textColor="@color/NewsTitleText"
        android:textSize="17sp" />

    <WebView
        android:id="@+id/webTerms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"/>
</RelativeLayout>