<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryHeader"
    android:id="@+id/ll_background"
    android:layout_height="@dimen/margin_70"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_10"
        tools:ignore="UselessParent">

        <ImageButton
            android:id="@+id/drawer_image_menu"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:backgroundTint="@color/PrimaryText"
            app:srcCompat="@drawable/ic_menu"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/back_image_menu"
            android:layout_width="@dimen/text_40"
            android:layout_height="@dimen/text_40"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:src="@drawable/ic_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/PrimaryText"
                android:textSize="@dimen/text_15"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/MutedText"
                android:textSize="@dimen/text_12"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_toStartOf="@+id/img_header_notification"
            android:orientation="horizontal"
            tools:ignore="RelativeOverlap">

            <ImageView
                android:id="@+id/img_coin"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5"
                app:srcCompat="@drawable/ic_coin"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_moedas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/exo2_extra_bold"
                android:textColor="@color/PrimaryText"
                android:textSize="@dimen/text_15"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_cart"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_40"
            android:layout_gravity="center"
            android:visibility="gone"
            android:padding="@dimen/margin_5"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_cart_whitte"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/img_header_notification"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_40"
            android:padding="@dimen/margin_5"
            android:layout_centerInParent="true"
            android:clickable="true"
            app:srcCompat="@drawable/ic_notifications"
            android:adjustViewBounds="true"
            android:layout_alignParentEnd="true"
            app:tint="@color/PrimaryText"
            tools:ignore="ContentDescription,KeyboardInaccessibleWidget" />

        <TextView
            android:id="@+id/txt_notification"
            android:layout_width="@dimen/margin_15"
            android:layout_height="@dimen/margin_15"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_5"
            android:gravity="center"
            android:textSize="@dimen/text_10"
            android:textStyle="bold"
            android:background="@drawable/back_rectangle_rounded_35"
            android:backgroundTint="@color/PrimaryAnchor"
            android:textColor="@color/ColorNotificationValue"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/img_bookmark"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_40"
            android:padding="@dimen/margin_5"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_bookmark"
            android:adjustViewBounds="true"
            android:layout_alignParentEnd="true"
            app:tint="@color/PrimaryText"
            tools:ignore="ContentDescription,KeyboardInaccessibleWidget" />
    </RelativeLayout>

</LinearLayout>