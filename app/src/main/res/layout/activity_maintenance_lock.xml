<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_maintenance_background"
    android:fitsSystemWindows="true"
    android:id="@+id/ll_background"
    tools:context="com.frf.app.activitys.MaintenanceLockScreenActivity">

    <ImageView
        android:id="@+id/img_exit"
        android:visibility="gone"
        android:layout_width="@dimen/text_40"
        android:layout_height="@dimen/text_40"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_close_24"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_50"
        android:layout_marginHorizontal="@dimen/margin_20">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/revizie_ntehnic"
            android:background="@android:color/white"
            android:textColor="@color/PrimaryBackground"
            android:fontFamily="@font/exo_2_bold"
            android:textSize="36sp"/>

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_30"
            android:textSize="@dimen/text_15"
            android:fontFamily="@font/exo2_semi_bold"
            android:textColor="@color/PrimaryColorText"/>

    </LinearLayout>

    <!--    BotÃ£o de baixo-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="@dimen/margin_50">

        <Button
            android:id="@+id/btn_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_rectangle_rounded_35"
            android:backgroundTint="@color/PrimaryText"
            android:padding="15dp"
            android:visibility="gone"
            android:text="@string/activeaz_notific_rile"
            android:fontFamily="@font/exo2_medium"
            android:textColor="@color/PrimaryButtonText"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo2_semi_bold"
            android:textSize="@dimen/text_15"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:visibility="gone"
            android:text="@string/nu_acum"
            android:layout_marginTop="@dimen/margin_20"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo2_regular"
            android:textSize="@dimen/text_15"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_30"/>

    </LinearLayout>

</RelativeLayout>