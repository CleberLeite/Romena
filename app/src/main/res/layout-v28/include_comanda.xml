<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_20"
    android:layout_marginRight="@dimen/margin_20"
    android:layout_marginBottom="@dimen/margin_20"
    android:minHeight="@dimen/margin_80"
    app:cardElevation="5dp"
    android:outlineAmbientShadowColor="#0B3575"
    android:outlineSpotShadowColor="#0B3575"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="@color/BackgroundTintText"
    app:cardCornerRadius="@dimen/margin_20"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_comanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/exo_2_bold"
            android:textColor="@color/NewsTitleText"
            android:textSize="@dimen/text_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:textColor="@color/PrimaryColorText"
            android:fontFamily="@font/exo2_semi_bold"
            android:textSize="@dimen/text_15"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/MutedText"
            android:textSize="@dimen/text_13"
            android:fontFamily="@font/exo2_medium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            tools:ignore="RelativeOverlap">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textColor="@color/MutedText"
                android:textSize="@dimen/text_13"
                android:fontFamily="@font/exo_2_bold" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ColorItemYellow"
                android:textSize="@dimen/text_13"
                android:fontFamily="@font/exo2_semi_bold" />

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/login_enter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_32"
        android:layout_marginBottom="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:visibility="gone"
        android:background="@drawable/back_rectangle_rounded_50"
        android:backgroundTint="@color/PrimaryBackground"
        android:fontFamily="@font/exo_2_bold"
        android:text="@string/urm_re_te_comanda"
        android:textAllCaps="false"
        android:textColor="@color/PrimaryText"
        android:textSize="@dimen/text_12" />
    
</LinearLayout>
    
</androidx.cardview.widget.CardView>