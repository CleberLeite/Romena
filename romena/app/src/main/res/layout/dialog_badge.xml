<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#900B3575">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10000dp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_38sdp"
        android:minWidth="@dimen/_250sdp"
        android:layout_marginHorizontal="@dimen/_38sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/back_rectangle_rounded_50"
        android:backgroundTint="@color/PrimaryBackground"
        android:fontFamily="@font/opensans_semi_bold"
        android:text="@string/next"
        android:visibility="gone"
        android:textColor="@color/PrimaryText"
        android:textSize="@dimen/_11ssp"
        android:layout_gravity="bottom|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent" />

</FrameLayout>