<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_16">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtRank"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:text="0"
                android:visibility="gone"
                android:fontFamily="@font/exo2_medium"
                android:textColor="@color/ColorBlueGray600"
                android:gravity="center"
                android:textSize="@dimen/text_14"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/ll_image_ranking"
                android:visibility="visible"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:backgroundTint="@color/PrimaryText"
                app:srcCompat="@drawable/ic_ranking_second"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/adapter_img_ranking"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_40"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_10"
                android:backgroundTint="@color/PrimaryText"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/adapter_title_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo2_semi_bold"
                    android:gravity="start"
                    android:text="@string/liviu_popescu"
                    android:textColor="@color/NewsTitleText"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/adapter_subtitle_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo_2_bold"
                    android:gravity="start"
                    android:text="@string/comentator"
                    android:textColor="@color/ColorBlue"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_10"
            android:orientation="horizontal"
            tools:ignore="RelativeOverlap">

            <ImageView
                android:layout_width="@dimen/margin_15"
                android:layout_height="@dimen/margin_15"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5"
                app:srcCompat="@drawable/ic_coin_blue"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/adapter_total_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/exo2_extra_bold"
                android:textColor="@color/PrimaryColorText"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
