<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimaryBackground"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.frf.app.fragments.AccountFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:paddingVertical="@dimen/margin_5"
        android:text="@string/set_ri_cont"
        android:textColor="@color/ColorEventsTitle"
        android:textSize="@dimen/text_29"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/round_shape"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_10"
                android:fillViewport="true"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.frf.app.views.RoundedShadowedLayout
                        android:id="@+id/card_change_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_70"
                        android:layout_marginHorizontal="@dimen/margin_15"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingEnd="@dimen/margin_5"
                        android:paddingStart="@dimen/margin_5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/exo_2_bold"
                                android:gravity="center"
                                android:text="@string/modifica_datele_contului_frf_id"
                                android:textColor="@color/NewsTitleText"
                                android:textSize="@dimen/text_15"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.frf.app.views.RoundedShadowedLayout>

                    <com.frf.app.views.RoundedShadowedLayout
                        android:id="@+id/card_change_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_70"
                        android:layout_marginHorizontal="@dimen/margin_15"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:visibility="gone"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingEnd="@dimen/margin_5"
                        android:paddingStart="@dimen/margin_5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/exo_2_bold"
                                android:gravity="center"
                                android:text="@string/schimb_e_mail"
                                android:textColor="@color/NewsTitleText"
                                android:textSize="@dimen/text_15"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.frf.app.views.RoundedShadowedLayout>

                    <com.frf.app.views.RoundedShadowedLayout
                        android:id="@+id/card_terms"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_70"
                        android:layout_marginHorizontal="@dimen/margin_15"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingEnd="@dimen/margin_5"
                        android:paddingStart="@dimen/margin_5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/exo_2_bold"
                                android:gravity="center"
                                android:text="@string/termeni_amp_condi_ii"
                                android:textColor="@color/NewsTitleText"
                                android:textSize="@dimen/text_15"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.frf.app.views.RoundedShadowedLayout>

                    <com.frf.app.views.RoundedShadowedLayout
                        android:id="@+id/card_politics"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_70"
                        android:layout_marginHorizontal="@dimen/margin_15"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingEnd="@dimen/margin_5"
                        android:paddingStart="@dimen/margin_5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/exo_2_bold"
                                android:gravity="center"
                                android:text="@string/confiden_ialitate"
                                android:textColor="@color/NewsTitleText"
                                android:textSize="@dimen/text_15"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.frf.app.views.RoundedShadowedLayout>

                    <com.frf.app.views.RoundedShadowedLayout
                        android:id="@+id/view_delete_accaunt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_70"
                        android:layout_marginHorizontal="@dimen/margin_15"
                        android:layout_marginBottom="@dimen/margin_90"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingEnd="@dimen/margin_5"
                        android:paddingStart="@dimen/margin_5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/exo_2_bold"
                                android:gravity="center"
                                android:text="@string/terge_contul"
                                android:textColor="@color/ColorRed"
                                android:textSize="@dimen/text_15"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.frf.app.views.RoundedShadowedLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>