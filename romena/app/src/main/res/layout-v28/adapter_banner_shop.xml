<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_news_promotion"
    android:layout_width="@dimen/_252sdp"
    android:layout_height="@dimen/_117sdp"
    android:elevation="0dp"
    app:cardBackgroundColor="@color/BackgroundTintText"
    app:cardCornerRadius="@dimen/_11sdp"
    app:cardElevation="5dp"
    android:outlineAmbientShadowColor="#0B3575"
    android:outlineSpotShadowColor="#0B3575"
    android:layout_marginStart="@dimen/_7sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />

</androidx.cardview.widget.CardView>