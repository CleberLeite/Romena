<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/BackgroundTintText"
    app:cardCornerRadius="@dimen/margin_16"
    android:id="@+id/card_videos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardElevation="10dp"
    android:outlineAmbientShadowColor="#0B3575"
    android:outlineSpotShadowColor="#0B3575"
    app:cardUseCompatPadding="false"
    android:layout_marginLeft="@dimen/margin_20"
    android:layout_marginRight="@dimen/margin_20"
    android:layout_marginBottom="@dimen/margin_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_20">

        <RelativeLayout
            android:id="@+id/img_card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5">

            <ImageView
                android:id="@+id/img_videos"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play_ico" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="@font/exo2_extra_bold"
            android:text="@string/_video"
            android:textColor="@color/PrimaryText"
            android:textSize="@dimen/text_12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:fontFamily="@font/exo2_extra_bold"
            android:text="01:30"
            android:textColor="@color/PrimaryText"
            android:textSize="@dimen/text_12"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_card1"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_title_videos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo2_medium"
                    android:gravity="start"
                    android:textColor="@color/ThirdBackground"
                    android:textSize="@dimen/text_12"
                    android:textFontWeight="800"
                    android:layout_weight="1"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo2_medium"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/MutedText"
                    android:textSize="@dimen/text_12" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_desc_videos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_10"
                android:fontFamily="@font/exo2_semi_bold"
                android:textColor="@color/NewsTitleText"
                android:textFontWeight="600"
                android:textSize="@dimen/text_15"  />


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>