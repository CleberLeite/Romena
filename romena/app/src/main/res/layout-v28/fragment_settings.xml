<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimaryBackground"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.frf.app.fragments.SettingsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:paddingVertical="@dimen/margin_5"
        android:text="Setări"
        android:textColor="@color/ColorEventsTitle"
        android:textSize="@dimen/text_29"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/round_shape"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_10"
                android:fillViewport="true"
                android:background="@drawable/round_shape">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_account"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_60"
                        app:cardElevation="20dp"
                        android:elevation="@dimen/margin_5"
                        android:outlineAmbientShadowColor="#0B3575"
                        android:outlineSpotShadowColor="#0B3575"
                        app:cardUseCompatPadding="false"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:layout_marginTop="@dimen/margin_20"
                        app:cardBackgroundColor="@color/BackgroundTintText"
                        app:cardCornerRadius="@dimen/margin_16">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:src="@drawable/ic_avatar_black" />

                            <TextView
                                android:layout_width="303dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/margin_20"
                                android:fontFamily="@font/exo_2_bold"
                                android:gravity="start"
                                android:text="Cont"
                                android:textColor="@color/NewsTitleText"
                                android:textSize="@dimen/text_15" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_notifications_setting"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_60"
                        app:cardElevation="20dp"
                        android:elevation="@dimen/margin_5"
                        android:outlineAmbientShadowColor="#0B3575"
                        android:outlineSpotShadowColor="#0B3575"
                        app:cardUseCompatPadding="false"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:layout_marginBottom="@dimen/margin_20"
                        app:cardBackgroundColor="@color/BackgroundTintText"
                        app:cardCornerRadius="@dimen/margin_16">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:src="@drawable/ic_notification_black" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/margin_20"
                                android:fontFamily="@font/exo_2_bold"
                                android:gravity="start"
                                android:text="Notificări"
                                android:textColor="@color/NewsTitleText"
                                android:textSize="@dimen/text_15" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_about"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_60"
                        app:cardElevation="20dp"
                        android:elevation="@dimen/margin_5"
                        android:outlineAmbientShadowColor="#0B3575"
                        android:outlineSpotShadowColor="#0B3575"
                        app:cardUseCompatPadding="false"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:layout_marginBottom="@dimen/margin_20"
                        app:cardBackgroundColor="@color/BackgroundTintText"
                        app:cardCornerRadius="@dimen/margin_16">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:src="@drawable/ic_about" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/margin_20"
                                android:fontFamily="@font/exo_2_bold"
                                android:gravity="start"
                                android:text="Despre"
                                android:textColor="@color/NewsTitleText"
                                android:textSize="@dimen/text_15" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_help"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_60"
                        app:cardElevation="20dp"
                        android:elevation="@dimen/margin_5"
                        android:outlineAmbientShadowColor="#0B3575"
                        android:outlineSpotShadowColor="#0B3575"
                        app:cardUseCompatPadding="false"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:layout_marginBottom="@dimen/margin_20"
                        app:cardBackgroundColor="@color/BackgroundTintText"
                        app:cardCornerRadius="@dimen/margin_16">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:src="@drawable/ic_help" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/margin_20"
                                android:fontFamily="@font/exo_2_bold"
                                android:gravity="start"
                                android:text="Ajutor"
                                android:textColor="@color/NewsTitleText"
                                android:textSize="@dimen/text_15" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>